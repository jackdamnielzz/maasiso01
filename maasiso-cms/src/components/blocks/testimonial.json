{
  "collectionName": "components_blocks_testimonials",
  "info": {
    "displayName": "Testimonial",
    "description": "Customer testimonial or review block"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "quote": {
      "type": "text",
      "required": true
    },
    "authorName": {
      "type": "string",
      "required": true
    },
    "authorTitle": {
      "type": "string"
    },
    "authorCompany": {
      "type": "string"
    },
    "authorImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5
    },
    "style": {
      "type": "enumeration",
      "enum": ["card", "simple", "featured"],
      "default": "card"
    }
  }
}
