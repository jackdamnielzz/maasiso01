{
  "collectionName": "components_blocks_texts",
  "info": {
    "displayName": "Text",
    "description": "Rich text content block"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "content": {
      "type": "richtext",
      "required": true
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "left"
    },
    "maxWidth": {
      "type": "string",
      "regex": "^\\d+(%|px|rem|em|vw)$",
      "default": "100%"
    }
  }
}
